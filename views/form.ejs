    <input type="text" name="title" value="<%if(editing) {%> <%=product.title%> <%}%>"> <br>
    <label for="price">Enter Price</label>
    <input type="text" name="price" value="<%if(editing) {%> <%=product.price%> <%}%>"> <br>
    <label for="description">Enter Description</label>
    <textarea name="description" cols="30" rows="3"><%if(editing) {%> <%=product.description%> <%}%></textarea>
    <%if(editing) {%>
       <input type="hidden" value="<%= product.id%>" name="productId"> 
    <%}%>
